{
  "name": "mcp-secrets-vault",
  "version": "0.1.1",
  "description": "MCP-compatible tool for secure secret management without exposure",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-secrets-vault": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "generate:schema": "tsx scripts/generate-schema.ts",
    "validate:config": "tsx src/cli/validate-config.ts",
    "doctor": "tsx src/index.ts doctor"
  },
  "keywords": [
    "mcp",
    "secrets",
    "vault",
    "security",
    "ai",
    "assistant",
    "model-context-protocol",
    "secret-management",
    "api-keys",
    "environment-variables"
  ],
  "author": "Rachid Chabane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RachidChabane/mcp-secrets-vault.git"
  },
  "bugs": {
    "url": "https://github.com/RachidChabane/mcp-secrets-vault/issues"
  },
  "homepage": "https://github.com/RachidChabane/mcp-secrets-vault#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.24.1"
  }
}